<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Dia.Theme.Garajeando" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/rojo</item>
        <item name="colorPrimaryDark">@color/rojo_oscuro</item>
        <item name="colorAccent">@color/gris_acentuado</item>
        <item name="homeAsUpIndicator">@drawable/flecha_atras_tema_claro</item>
        <item name="android:colorBackground">@color/blanco</item>
        <item name="android:textColor">@color/gris_acentuado</item>
        <item name="android:textColorPrimary">@color/gris_acentuado</item>
        <item name="android:textColorHint">@color/gris_oscuro</item>
        <item name="android:popupBackground">@color/blanco</item>
        <item name="cardBackgroundColor">@color/blanco</item>
        <item name="dialogBackgroundColor">@color/blanco</item>
        <item name="dialogTextColor">@color/gris_acentuado</item>
        <item name="dialogButtonTextColor">@color/rojo</item>
    </style>

    <style name="Noche.Theme.Garajeando" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:windowLightNavigationBar">false</item>
        <item name="colorPrimary">@color/rojo_oscuro</item>
        <item name="colorPrimaryDark">@color/rojo</item>
        <item name="colorAccent">@color/gris_oscuro</item>
        <item name="homeAsUpIndicator">@drawable/flecha_atras_tema_oscuro</item>
        <item name="android:colorBackground">#121212</item>
        <item name="android:textColor">@color/gris_muy_claro</item>
        <item name="android:textColorPrimary">@color/gris_muy_claro</item>
        <item name="android:textColorHint">@color/gris_oscuro</item>
        <item name="colorButtonNormal">@color/rojo_oscuro</item>
        <item name="android:popupBackground">#121212</item>
        <item name="cardBackgroundColor">#121212</item>
        <item name="dialogBackgroundColor">#121212</item>
        <item name="dialogTextColor">@color/gris_muy_claro</item>
        <item name="dialogButtonTextColor">@color/rojo_oscuro</item>
    </style>
</resources>