                app:layout_constraintTop_toBottomOf="@id/bluetoothTextView" />

            <TextView
                android:id="@+id/gpsTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
